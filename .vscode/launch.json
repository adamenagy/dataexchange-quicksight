    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "envFile": "${workspaceFolder}/.env",
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "env": {
              "APS_CLIENT_ID": "aps-client-id",
              "APS_CLIENT_SECRET": "aps-client-secret",
              "APS_CALLBACK_URL": "http://localhost:3000/auth/aps/callback",
              "SERVER_SESSION_SECRET": "server-session-secret",
            }
        }
    ]
}